  <script>
    const weatherData = {
      coimbatore: {
        country: "India",
        temp: 30,
        feels_like: 32,
        humidity: 60,
        description: "Cloudy",
        lon: 76.96,
        lat: 11.01,
        icon: "https://cdn-icons-png.flaticon.com/512/1163/1163624.png"
      },
      thoothukudi: {
        country: "India",
        temp: 33,
        feels_like: 36,
        humidity: 65,
        description: "Hot and Humid",
        lon: 78.13,
        lat: 8.76,
        icon: "https://cdn-icons-png.flaticon.com/512/869/869869.png"
      },
      madurai: {
        country: "India",
        temp: 36,
        feels_like: 39,
        humidity: 55,
        description: "Sunny",
        lon: 78.12,
        lat: 9.92,
        icon: "https://cdn-icons-png.flaticon.com/512/4814/4814268.png"
      },
      chennai: {
        country: "India",
        temp: 34,
        feels_like: 38,
        humidity: 65,
        description: "Hot and Humid",
        lon: 80.27,
        lat: 13.08,
        icon: "https://cdn-icons-png.flaticon.com/512/869/869869.png"
      },
      bangalore: {
        country: "India",
        temp: 28,
        feels_like: 30,
        humidity: 70,
        description: "Pleasant",
        lon: 77.59,
        lat: 12.97,
        icon: "https://cdn-icons-png.flaticon.com/512/1163/1163624.png"
      }
    };

    document.getElementById('check').addEventListener('click', () => {
      const cityInput = document.getElementById('city').value.trim().toLowerCase();

      if (weatherData[cityInput]) {
        const data = weatherData[cityInput];

        document.getElementById('weatherCountry').textContent = `${capitalize(cityInput)}, ${data.country}`;
        document.getElementById('temperature').innerHTML = `${data.temp}째C`;
        document.getElementById('weatherDescription').textContent = data.description;
        document.getElementById('feelsLike').textContent = `Feels Like: ${data.feels_like}째C`;
        document.getElementById('humidity').textContent = `Humidity: ${data.humidity}%`;
        document.getElementById('longitude').textContent = `Longitude: ${data.lon}`;
        document.getElementById('latitude').textContent = `Latitude: ${data.lat}`;
        document.getElementById('tempIcon').src = data.icon;
      } else {
        alert("City not found. Try Coimbatore, Thoothukudi, Madurai, Chennai, or Bangalore.");
      }
    });

    function capitalize(str) {
      return str.charAt(0).toUpperCase() + str.slice(1);
    }
  </script>
